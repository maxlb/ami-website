<!-- Modal Structure -->
<div id="modal1" class="modal">

  <form action="/login" method="POST" class="modal-content" id="connectForm">

    <div>
      <h4 style="text-align: center;">Se connecter</h4>
      <blockquote>Veuillez vous enregistrer pour accéder à votre espace d'administration.</blockquote>
    </div>

    <div class="row">
      <div class="input-field col s10 offset-s1">
        <i class="material-icons prefix blue-text">mail</i>
        <input id="mail" name="mail" type="email" class="validate blue-text">
        <label for="mail" class="blue-text">Identifiant</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s10 offset-s1">
        <i class="material-icons prefix blue-text">lock</i>
        <input id="password" name="password" type="password" class="validate blue-text">
        <label for="password" class="blue-text">Mot de passe</label>
      </div>
    </div>

    <div class="modal-footer">
      <button class="btn waves-effect waves-light blue" type="submit" name="action">
        Se connecter
        <i class="material-icons right">send</i>
      </button>
      <a class="btn waves-light modal-close red accent-4" style="margin-right: 10px;">Annuler</a>
    </div>

  </form>

</div>

